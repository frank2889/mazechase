---
import Layout from '../layouts/Layout.astro';
---

<Layout title="MazeChase - Multiplayer Game">
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
        <h1 class="text-6xl font-bold text-yellow-400 mb-2 drop-shadow-lg">MazeChase</h1>
        <p class="text-gray-300 text-xl mb-8">4-Speler Multiplayer Maze Game</p>
        
        <div class="text-center mb-8">
            <p class="text-gray-400 mb-2">Maak een account en speel met vrienden!</p>
            <p class="text-gray-500 text-sm">Deel je lobby code en race tegen elkaar</p>
        </div>

        <div class="flex flex-col gap-4 w-full max-w-xs">
            <a 
                href="/auth/login" 
                class="bg-green-500 hover:bg-green-600 text-white text-xl font-bold py-4 px-8 rounded-xl shadow-lg transition-all duration-200 transform hover:scale-105 text-center"
            >
                Inloggen
            </a>
            
            <a 
                href="/auth/register" 
                class="bg-blue-500 hover:bg-blue-600 text-white text-xl font-bold py-4 px-8 rounded-xl shadow-lg transition-all duration-200 transform hover:scale-105 text-center"
            >
                Account Aanmaken
            </a>
        </div>

        <div class="mt-12 text-gray-500 text-sm text-center">
            <p>Werkt op alle apparaten: iPhone, iPad, Android, PC</p>
            <p class="mt-2">Maak een lobby, deel de code, en speel!</p>
        </div>
    </div>
</Layout>
