---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="FIGHT !!!!!">
    <div id="errorPopupOverlay" class="error-popup-overlay">
        <div class="error-popup-content">
            <p id="errorMessage"></p>
            <button id="closePopupButton">Sluiten</button>
        </div>
    </div>
    <div>
        <a href="/" class="nav-button" id="homeLinkButton">Terug naar Lobby</a>
    </div>

    <div id="the-game"></div>
</Layout>

<style>
    body {
        background-color: black;
        color: white;
        font-family: Arial, sans-serif;
    }

    .nav-button {
        display: inline-block;
        padding: 10px 25px; /* Adjust padding to match size */
        background-color: #2a2a2e; /* Dark background from image */
        color: #f5f5f6; /* Light lavender text color from image */
        text-decoration: none;
        border: 2px solid #707070; /* Light gray border from image */
        border-radius: 8px; /* Rounded corners from image */
        cursor: pointer;
        font-family: 'Play', sans-serif; /* Use Play font */
        font-weight: 700; /* Bold weight */
        font-size: 16px; /* Adjust font size as needed */
        text-align: center;
        margin-bottom: 10px;
        transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover */
    }

    .nav-button:hover {
        background-color: #3a3a3e; /* Slightly lighter on hover */
        border-color: #888888;
    }

    /* Basic styling for the popup */
    .error-popup-overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1002; /* Ensure popup is on top */
        cursor: pointer;
    }

    .error-popup-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        color: #333; /* Darker text for readability on white background */
        padding: 25px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
        min-width: 300px;
        font-family: 'Play', sans-serif; /* Apply Play font to popup content */
        cursor: default; /* Reset cursor for the content area */
    }

    .error-popup-content p#errorMessage {
        font-size: 16px; /* Adjust as needed */
        margin-bottom: 20px;
        font-weight: 400; /* Regular weight for the message */
        line-height: 1.5;
    }

    .error-popup-content button#closePopupButton { /* Styles the popup's close button */
        margin-top: 15px;
        padding: 10px 20px;
        background-color: #f44336; /* Red */
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-family: 'Play', sans-serif; /* Apply Play font to button */
        font-weight: 700; /* Bold weight for button text */
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .error-popup-content button#closePopupButton:hover {
        background-color: #d32f2f; /* Darker red on hover */
    }
</style>

<script>
    import "../../lib/game/main"
</script>