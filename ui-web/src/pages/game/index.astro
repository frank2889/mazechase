---
import GameLayout from "../../layouts/GameLayout.astro";
---

<GameLayout title="FIGHT !!!!!">
    <div id="errorPopupOverlay" class="error-popup-overlay">
        <div class="error-popup-content">
            <p id="errorMessage"></p>
            <button id="closePopupButton">Sluiten</button>
        </div>
    </div>
    <div class="game-header">
        <a href="/" class="nav-button" id="homeLinkButton">⬅ Lobby</a>
    </div>

    <div id="game-container">
        <div id="the-game"></div>
    </div>

    <!-- Touch Controls for Mobile -->
    <div id="touch-controls">
        <div class="control-row">
            <button class="control-btn" id="btn-up">▲</button>
        </div>
        <div class="control-row">
            <button class="control-btn" id="btn-left">◀</button>
            <div class="control-spacer"></div>
            <button class="control-btn" id="btn-right">▶</button>
        </div>
        <div class="control-row">
            <button class="control-btn" id="btn-down">▼</button>
        </div>
    </div>
</GameLayout>

<style>
    :global(body) {
        background: linear-gradient(to bottom, #0f172a, #1e1b4b, #0f172a);
        color: white;
        font-family: 'Play', sans-serif;
        margin: 0;
        padding: 0;
        overflow: hidden;
        touch-action: none;
        -webkit-user-select: none;
        user-select: none;
    }

    :global(html), :global(body) {
        height: 100%;
        width: 100%;
    }

    .game-header {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 100;
    }

    .nav-button {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 10px 18px;
        background: linear-gradient(135deg, #7c3aed, #8b5cf6);
        color: white;
        text-decoration: none;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-family: 'Play', sans-serif;
        font-weight: 700;
        font-size: 14px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
    }

    .nav-button:hover {
        background: linear-gradient(135deg, #8b5cf6, #a78bfa);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(139, 92, 246, 0.4);
    }

    #game-container {
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    #the-game {
        max-width: 100vw;
        max-height: 100vh;
        width: auto;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 0 40px rgba(139, 92, 246, 0.2);
    }

    #the-game canvas {
        max-width: 100vw !important;
        max-height: calc(100vh - 120px) !important;
        width: auto !important;
        height: auto !important;
        object-fit: contain;
        border-radius: 8px;
    }

    /* Touch Controls */
    #touch-controls {
        display: none;
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        touch-action: manipulation;
    }

    .control-row {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .control-btn {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #7c3aed, #8b5cf6);
        border: 3px solid #a78bfa;
        color: white;
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
        touch-action: manipulation;
        -webkit-tap-highlight-color: transparent;
        transition: transform 0.1s, background-color 0.1s;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
    }

    .control-btn:active {
        transform: scale(0.9);
        background: linear-gradient(135deg, #6d28d9, #7c3aed);
    }

    .control-spacer {
        width: 60px;
        height: 60px;
    }

    /* Show touch controls on touch devices */
    @media (hover: none) and (pointer: coarse) {
        #touch-controls {
            display: block;
        }
        
        #the-game canvas {
            max-height: calc(100vh - 220px) !important;
        }
    }

    /* Landscape mode on mobile */
    @media (max-height: 500px) and (orientation: landscape) {
        #touch-controls {
            display: flex;
            flex-direction: row;
            bottom: 10px;
            right: 20px;
            left: auto;
            transform: none;
        }
        
        .control-row {
            flex-direction: column;
        }
        
        .control-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
        
        .control-spacer {
            width: 50px;
            height: 50px;
        }
        
        #the-game canvas {
            max-height: calc(100vh - 20px) !important;
            max-width: calc(100vw - 200px) !important;
        }
    }

    /* Small screens */
    @media (max-width: 480px) {
        .nav-button {
            padding: 6px 12px;
            font-size: 12px;
        }
        
        .control-btn {
            width: 55px;
            height: 55px;
            font-size: 22px;
        }
        
        .control-spacer {
            width: 55px;
            height: 55px;
        }
    }

    /* Tablet */
    @media (min-width: 768px) and (max-width: 1024px) {
        .control-btn {
            width: 70px;
            height: 70px;
            font-size: 28px;
        }
        
        .control-spacer {
            width: 70px;
            height: 70px;
        }
    }

    /* Error popup */
    .error-popup-overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1002;
        cursor: pointer;
    }

    .error-popup-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        color: #333;
        padding: 25px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
        min-width: 280px;
        max-width: 90vw;
        font-family: 'Play', sans-serif;
        cursor: default;
    }

    .error-popup-content p#errorMessage {
        font-size: 16px;
        margin-bottom: 20px;
        font-weight: 400;
        line-height: 1.5;
    }

    .error-popup-content button#closePopupButton {
        margin-top: 15px;
        padding: 10px 20px;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-family: 'Play', sans-serif;
        font-weight: 700;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .error-popup-content button#closePopupButton:hover {
        background-color: #d32f2f;
    }
</style>

<script>
    import "../../lib/game/main"
    import { setupTouchControls } from "../../lib/game/touch-controls"
    
    // Initialize touch controls after game loads
    document.addEventListener('DOMContentLoaded', () => {
        setupTouchControls();
    });
</script>