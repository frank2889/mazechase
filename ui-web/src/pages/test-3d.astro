---
// Test page for 3D rendering - remove after development
---

<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MazeChase 3D Test</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            background: #0a0a1a;
            overflow: hidden;
            font-family: system-ui, sans-serif;
        }
        #game-container {
            width: 100vw;
            height: 100vh;
            position: relative;
        }
        #game-canvas {
            width: 100%;
            height: 100%;
            display: block;
        }
        .overlay {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            font-size: 14px;
            background: rgba(0, 0, 0, 0.7);
            padding: 15px 20px;
            border-radius: 8px;
            max-width: 300px;
        }
        .overlay h1 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #00ffc7;
        }
        .overlay p {
            margin-bottom: 8px;
            line-height: 1.4;
        }
        .overlay .controls {
            margin-top: 15px;
            padding-top: 10px;
            border-top: 1px solid rgba(255,255,255,0.2);
        }
        .overlay kbd {
            background: #333;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 12px;
        }
        .status {
            position: absolute;
            bottom: 20px;
            left: 20px;
            color: #00ff00;
            font-size: 12px;
            font-family: monospace;
        }
        .back-link {
            position: absolute;
            top: 20px;
            right: 20px;
            color: #00ffc7;
            text-decoration: none;
            background: rgba(0, 0, 0, 0.7);
            padding: 10px 20px;
            border-radius: 8px;
        }
        .back-link:hover {
            background: rgba(0, 100, 100, 0.7);
        }
    </style>
</head>
<body>
    <div id="game-container">
        <canvas id="game-canvas"></canvas>
        
        <div class="overlay">
            <h1>MazeChase 3D Test</h1>
            <p>Dit is de echte game map in 3D.</p>
            <p>Map: 30x20 tiles, 201 pellets, 12 power-ups</p>
            <div class="controls">
                <p><kbd>Muis</kbd> + <kbd>Drag</kbd> - Camera roteren</p>
                <p><kbd>Scroll</kbd> - Zoom in/uit</p>
                <p><kbd>WASD</kbd> of <kbd>Pijltjes</kbd> - Runner bewegen</p>
                <p><kbd>P</kbd> - Power-up mode (3 sec)</p>
                <p><kbd>E</kbd> - Pellet eten</p>
            </div>
        </div>
        
        <a href="/lobby" class="back-link">‚Üê Terug naar Lobby</a>
        
        <div class="status" id="status">Initializing...</div>
    </div>

    <script type="module">
        import { Game3DScene } from '../lib/game3d/scene.ts';

        const statusEl = document.getElementById('status');
        
        function updateStatus(msg) {
            statusEl.textContent = msg;
            console.log(msg);
        }

        async function init() {
            try {
                updateStatus('Creating 3D scene...');
                
                const canvas = document.getElementById('game-canvas');
                const game = new Game3DScene(canvas);
                
                // Load the real game map
                updateStatus('Loading real tilemap...');
                await game.loadRealMap('/gassets/map.json');
                
                // Add players at their spawn positions
                updateStatus('Adding players at spawn positions...');
                game.initPlayers();
                
                // Enable camera controls for testing
                const camera = game.getEngine().mainCamera;
                camera.attachControl(canvas, true);
                
                // Start rendering
                game.start();
                
                updateStatus('3D Engine running | FPS: --');
                
                // Update FPS display
                setInterval(() => {
                    const fps = game.getEngine().babylonEngine.getFps().toFixed(0);
                    updateStatus(`Real map loaded | 30x20 tiles | FPS: ${fps}`);
                }, 500);

                // Keyboard controls for testing - use pixel coordinates
                const TILE_SIZE = 50; // Phaser tile size
                let runnerPixelX = 110; // Runner spawn X
                let runnerPixelY = 220; // Runner spawn Y
                const MOVE_SPEED = TILE_SIZE; // Move one tile at a time
                
                document.addEventListener('keydown', (e) => {
                    switch(e.key) {
                        case 'ArrowUp':
                        case 'w':
                            runnerPixelY = Math.max(TILE_SIZE, runnerPixelY - MOVE_SPEED);
                            break;
                        case 'ArrowDown':
                        case 's':
                            runnerPixelY = Math.min(19 * TILE_SIZE, runnerPixelY + MOVE_SPEED);
                            break;
                        case 'ArrowLeft':
                        case 'a':
                            runnerPixelX = Math.max(TILE_SIZE, runnerPixelX - MOVE_SPEED);
                            break;
                        case 'ArrowRight':
                        case 'd':
                            runnerPixelX = Math.min(29 * TILE_SIZE, runnerPixelX + MOVE_SPEED);
                            break;
                        case 'p':
                            // Toggle power mode
                            game.setRunnerPoweredUp(true);
                            setTimeout(() => game.setRunnerPoweredUp(false), 3000);
                            break;
                        case 'e':
                            // Eat pellet at current tile position
                            const tileX = Math.floor(runnerPixelX / TILE_SIZE);
                            const tileY = Math.floor(runnerPixelY / TILE_SIZE);
                            game.removePellet(tileX, tileY);
                            break;
                    }
                    game.updatePlayerPositionPixels('runner', runnerPixelX, runnerPixelY);
                });

                // Make game accessible globally for debugging
                window.game3d = game;
                
            } catch (error) {
                updateStatus('Error: ' + error.message);
                console.error(error);
            }
        }

        init();
    </script>
</body>
</html>
